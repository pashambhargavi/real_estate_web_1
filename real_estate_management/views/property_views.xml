<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Tree (List) View -->
    <record id="view_property_list" model="ir.ui.view">
        <field name="name">property.property.list</field>
        <field name="model">property.property</field>
        <field name="arch" type="xml">
            <list editable="top" open_form_view="True">
                <field name="name"/>
                <field name="city"/>
                <field name="price" widget="monetary"/>
                <field name="plot_area"/>
                <field name="facing_direction"/>
                <field name="title_status"/>
                <field name="is_published"/>
                <field name="is_featured"/>
            </list>
        </field>
    </record>

    <!-- Form View - IMPROVED LAYOUT -->
    <record id="view_property_form" model="ir.ui.view">
        <field name="name">property.property.form</field>
        <field name="model">property.property</field>
        <field name="arch" type="xml">
            <form string="Property">
                <header>
                    <!-- Action buttons -->
                    <button name="action_regenerate_ai_content"
                            type="object"
                            string="Regenerate AI Content"
                            icon="fa-refresh"
                            class="btn-primary"/>

                    <!-- Status indicator -->
                    <field name="is_published" widget="boolean_toggle"/>
                    <field name="is_featured" widget="boolean_toggle"/>
                </header>

                <sheet>
                    <!-- â­ PROPERTY IMAGE (Avatar Style) -->
                    <field name="image"
                           widget="image"
                           class="oe_avatar"
                           options="{'size': [200, 200]}"/>

                    <!-- â­ TITLE SECTION -->
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name"
                                   placeholder="e.g., Green Valley Residency"
                                   required="1"/>
                        </h1>
                        <h3>
                            <field name="short_description"
                                   placeholder="Brief description of the property"/>
                        </h3>
                    </div>

                    <!-- â­ KEY METRICS CARDS (Top Section) -->
                    <div class="o_property_stats">
                        <group col="4">
                            <group string="ðŸ’° Pricing">
                                <field name="price" widget="monetary"/>
                                <field name="currency_id" invisible="1"/>
                                <field name="registration_charges" widget="monetary"/>
                                <field name="registration_amount" readonly="1"/>
                            </group>

                            <group string="ðŸ“ Dimensions">
                                <field name="plot_area"/>
                                <field name="price_per_sqft" readonly="1"/>
                                <field name="road_width"/>
                            </group>

                            <group string="ðŸ“ Location">
                                <field name="city" required="1"/>
                                <field name="state_id"/>
                                <field name="zip_code"/>
                            </group>

                            <group string="ðŸ“Š Status">
                                <field name="status"/>
                                <field name="title_status"/>
                                <field name="facing_direction"/>
                                <field name="views" readonly="1"/>
                            </group>
                        </group>
                    </div>

                    <!-- â­ NOTEBOOK TABS -->
                    <notebook>

                        <!-- TAB 1: General Information -->
                        <page string="General Information">
                            <group>
                                <group string="Property Details">
                                    <field name="category_id" options="{'no_create': True}"/>
                                    <field name="facing_direction"/>
                                    <field name="road_width"/>
                                    <field name="title_status"/>
                                    <field name="status"/>
                                    <field name="emi_available"/>
                                </group>

                                <group string="Documents">
                                    <field name="adhar_image"
                                           filename="adhar_filename"
                                           widget="binary"/>
                                    <field name="adhar_filename" invisible="1"/>
                                    <field name="agreement_document"
                                           filename="agreement_filename"
                                           widget="binary"/>
                                    <field name="agreement_filename" invisible="1"/>
                                </group>
                            </group>

                            <group>
                                <group string="Infrastructure Facilities">
                                    <field name="water_connection"/>
                                    <field name="electricity_connection"/>
                                    <field name="drainage_facility"/>
                                    <field name="gated_community"/>
                                </group>

                                <group string="Visibility Metrics">
                                    <field name="views" readonly="1"/>
                                    <field name="last_viewed" readonly="1"/>
                                    <field name="is_published"/>
                                    <field name="is_featured"/>
                                </group>
                            </group>
                        </page>

                        <!-- TAB 2: Location & Map -->
                        <page string="Location &amp; Map">
                            <group>
                                <group string="Address Details">
                                    <field name="street" placeholder="Street address"/>
                                    <field name="city" required="1"/>
                                    <field name="zip_code"/>
                                    <field name="state_id"/>
                                    <field name="country_id"/>
                                </group>

                                <group string="Geolocation Coordinates">
                                    <field name="latitude" readonly="1"/>
                                    <field name="longitude" readonly="1"/>
                                    <field name="date_localization" readonly="1"/>
                                </group>
                            </group>

                            <group string="Nearby Landmarks">
                                <field name="nearby_landmarks"
                                       widget="text"
                                       placeholder="e.g., 2 km from metro station, near shopping mall..."/>
                            </group>
                        </page>

                        <!-- TAB 3: Contact & Media -->
                        <page string="Contact &amp; Media">
                            <group>
                                <group string="Contact Person">
                                    <field name="contact_name" placeholder="Contact person name"/>
                                    <field name="contact_phone" widget="phone"/>
                                    <field name="contact_email" widget="email"/>
                                    <field name="property_website_url" widget="url"/>
                                </group>

                                <group string="Property Gallery">
                                    <field name="gallery_image_ids"
                                           widget="many2many_binary"
                                           nolabel="1"/>
                                    <field name="image_count" readonly="1"/>
                                </group>
                            </group>
                        </page>

                        <!-- TAB 4: City Investment Analysis -->
                        <page string="City Investment Analysis">
                            <group>
                                <group string="Investment Data">
                                    <field name="city_investment_generated"/>
                                    <field name="city_investment_date" readonly="1"/>
                                    <field name="last_city_processed" readonly="1"/>
                                </group>

                                <group string="City Infrastructure">
                                    <field name="city_infrastructure"
                                           widget="text"
                                           placeholder="Infrastructure highlights..."/>
                                </group>
                            </group>

                            <group>
                                <group string="Growth Potential">
                                    <field name="city_growth_potential"
                                           widget="text"
                                           placeholder="Future development plans..."/>
                                </group>

                                <group string="Market Trends">
                                    <field name="city_market_trends"
                                           widget="text"
                                           placeholder="Current market trends..."/>
                                </group>
                            </group>

                            <group string="Investment Reasons">
                                <field name="city_investment_reasons"
                                       widget="text"
                                       placeholder="Why invest in this city..."/>
                            </group>
                        </page>

                        <!-- TAB 5: AI Insights -->
                        <page string="AI Insights">
                            <div class="alert alert-info" role="alert">
                                <strong>ðŸ¤– AI-Generated Content</strong>
                                <p>This content is automatically generated using OpenAI. Click "Regenerate AI Content"
                                    button to refresh.
                                </p>
                            </div>

                            <group>
                                <group string="Generation Info">
                                    <field name="ai_content_generated" readonly="1"/>
                                    <field name="ai_generation_date" readonly="1"/>
                                </group>
                            </group>

                            <group>
                                <group string="Key Highlights">
                                    <field name="ai_key_highlights"
                                           widget="text"
                                           readonly="1"
                                           nolabel="1"/>
                                </group>

                                <group string="Investment Data">
                                    <field name="ai_investment_data"
                                           widget="text"
                                           readonly="1"
                                           nolabel="1"/>
                                </group>
                            </group>

                            <group>
                                <group string="Nearby Places">
                                    <field name="ai_nearby_places"
                                           widget="text"
                                           readonly="1"
                                           nolabel="1"/>
                                </group>

                                <group string="Unique Features">
                                    <field name="ai_unique_features"
                                           widget="text"
                                           readonly="1"
                                           nolabel="1"/>
                                </group>
                            </group>

                            <group string="Lifestyle Benefits">
                                <field name="ai_lifestyle_benefits"
                                       widget="text"
                                       readonly="1"
                                       nolabel="1"/>
                            </group>
                        </page>

                        <!-- TAB 6: SEO & Marketing -->
                        <page string="SEO &amp; Marketing">
                            <group>
                                <group string="SEO Configuration">
                                    <field name="seo_title"
                                           placeholder="SEO-friendly title (max 60 chars)"/>
                                    <field name="seo_description"
                                           widget="text"
                                           placeholder="Meta description (max 160 chars)"/>
                                </group>

                                <group string="Publication Status">
                                    <field name="is_published"/>
                                    <field name="is_featured"/>
                                    <field name="views" readonly="1"/>
                                    <field name="last_viewed" readonly="1"/>
                                </group>
                            </group>
                        </page>

                    </notebook>
                </sheet>

                <!-- Chatter (Activities, Messages, Notes) -->
                <chatter/>
            </form>
        </field>
    </record>

